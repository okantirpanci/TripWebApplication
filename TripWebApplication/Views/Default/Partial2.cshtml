@using TripWebApplication.Models.Sınıflar
@model List<Blog>

@foreach (var y in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@y.BlogImage" alt="">
        </div>
        <div class="left-text">

            <h4>@y.Baslik</h4>
            <p>@y.Aciklama.Substring(0, 80)</p>
            <p><a href="/Blog/BlogDetail/@y.ID"><span class="read">Daha Fazla...</span></a></p>
        </div>
    </div>
}
