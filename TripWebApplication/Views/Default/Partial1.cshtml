@using TripWebApplication.Models.Sınıflar
@model List<Blog>

<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="">
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <p>@x.Aciklama.Substring(0, 80)</p>
                <p><a href="/Blog/BlogDetail/@x.ID"><span class="read">Daha Fazla... >></span></a></p>
            </div>
        </div>
    }


    @Html.Action("Partial2","Default")


</div>
