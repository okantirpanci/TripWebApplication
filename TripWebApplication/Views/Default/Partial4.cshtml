@using TripWebApplication.Models.Sınıflar
@model List<Blog>


<div class="padding1">
    <h4>En Popüler 6 Blog</h4>

    <div class="box-left">

        @foreach (var x in Model)
        {
            <div class="bot-img">
                <img src="@x.BlogImage" alt="">
            </div>
            <div class="bot-desc">
                <p>@x.Aciklama.Substring(0, 75)<a href="/Blog/BlogDetail/@x.ID">...</a> </p>
            </div>
            <div class="clear"></div>
        }

    </div>

    @Html.Action("Partial5","Default")

</div>